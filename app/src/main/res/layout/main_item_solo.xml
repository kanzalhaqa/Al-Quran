<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/SurahNameArab"
            android:layout_width="match_parent"
            android:fontFamily="@font/quran_font"
            android:textSize="60sp"
            android:padding="5dp"
            android:textAlignment="textEnd"
            android:text="!"
            android:textColor="#570140"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/SurahNameEnglish"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:textColor="#570140"
            android:textAlignment="textEnd"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/surahnameenglish"
            android:padding="5dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:padding="5dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#570140"
        android:layout_gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:text="1"
            android:id="@+id/surahNumber"
            android:textSize="25sp"
            android:textColor="#c5dfff"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>


</LinearLayout>

   </LinearLayout>